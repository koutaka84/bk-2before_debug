<h2>User info</h2>

 
<%= attachment_image_tag @user, :profile_image, size: "50x50",format: 'jpg', fallback: "no_image.jpg" %>
<table class="table">

<tbody>
	<tr></tr>
<tr>
	<th>name</th>
  <th><%= user.name %></th>
</tr>
<tr>
	<th>introduction</th>
	<th><%= user.introduction %></th>
</tr>
<tr>
	<td>follows:<%= link_to user.followings.count,follow_path(user) %></td>
</tr>
<tr>
	<td>followers:<%= link_to user.followers.count,follower_path(user) %></td>
</tr>
</tbody>
</table>

<div class="row">
	<% if user == current_user %>
  <%= link_to "Edit", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_" %>
<% end %>
<%= render 'relationships/follow_button', user: user %>
</div>

