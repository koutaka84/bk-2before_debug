<div class="container">
	<div class="row">
		<div class="col-xs-3">
      
			<%= render 'users/profile', user: @user %>
			<%= render 'books/newform', book: @newBook %>
			
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
			<thead>
    <tr>
    	<th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
  <tr>
  	<td><%= attachment_image_tag @book, :profile_image, size: "30x30",format: 'jpg', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
    <% end %>
  </tbody>
</table>
		</div>
	</div>
</div>
