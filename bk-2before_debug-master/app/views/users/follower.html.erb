<div style='margin-top: 70px'>
<div class="container">
  <div class="row">
  	<div class="col-xs-9">
      <h2>Follower User</h2>
      <% if @user.followers.blank? %>
		<p>フォローされてません。</p>
        <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @user.followers.each do |user| %>
	<tr>
    <td><%= user.name %></td>
    <td>フォロー数:<%= user.followings.count %></td>
    <td>フォロワー数:<%= user.followers.count %></td>
  <td><%= link_to "Show" ,user_path(user.id) %></td>
  <% end %>
     </table>
     <% end %>
  </div>
</div>
</div>